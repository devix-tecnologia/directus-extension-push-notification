{
  "name": "@devix-tecnologia/directus-extension-push-notification",
  "description": "A simple and straightforward push notification management extension for Directus",
  "icon": "extension",
  "private": false,
  "version": "0.1.2",
  "type": "module",
  "keywords": [
    "directus",
    "directus-extension",
    "directus-custom-bundle",
    "push-notification",
    "web-push",
    "notifications",
    "vapid"
  ],
  "files": [
    "dist/**/*",
    "package.json",
    "README.md"
  ],
  "directus:extension": {
    "host": "^10.1.7",
    "type": "bundle",
    "path": {
      "app": "dist/app.js",
      "api": "dist/api.js"
    },
    "entries": [
      {
        "type": "endpoint",
        "name": "push-notification",
        "source": "src/push-notification/index.ts"
      },
      {
        "type": "hook",
        "name": "db-configuration",
        "source": "src/db-configuration/index.ts"
      },
      {
        "type": "hook",
        "name": "notification-trigger",
        "source": "src/notification-trigger/index.ts"
      }
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devix-tecnologia/directus-extension-push-notification.git"
  },
  "scripts": {
    "build": "directus-extension build",
    "dev": "directus-extension build -w --no-minify",
    "docker:start": "docker-compose -f docker-compose.yml up -d",
    "docker:stop": "docker-compose -f docker-compose.yml down",
    "link": "directus-extension link",
    "validate": "directus-extension validate",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "postbuild": "cp ./directus-state.json ./dist/directus-state.json",
    "add-extension": "directus-extension add",
    "test": "pnpm test:e2e",
    "test:integration:env-up": "docker-compose -f docker-compose.test.yml up -d --wait",
    "test:integration:env-down": "docker-compose -f docker-compose.test.yml down",
    "test:integration:run": "vitest run tests/**/*.test.ts",
    "test:integration": "pnpm run test:integration:run",
    "test:integration:ci": "sh -c 'pnpm run test:integration:env-up && pnpm run test:integration:run; EXIT_CODE=$?; pnpm run test:integration:env-down; exit $EXIT_CODE'",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:dev": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@directus/extensions-sdk": "17.0.5",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.3",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.10",
    "@types/web-push": "^3.6.4",
    "axios": "^1.13.3",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.2.0",
    "prettier": "^3.8.1",
    "semantic-release": "^25.0.2",
    "taskin": "^2.3.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "web-push": "^3.6.7"
  },
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "author": "Devix Tecnologia",
  "contributors": [
    {
      "name": "Sidarta Veloso",
      "github": "https://github.com/sidartaveloso",
      "linkedin": "https://www.linkedin.com/in/sidartaveloso"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/devix-tecnologia/directus-extension-push-notification/issues"
  },
  "homepage": "https://github.com/devix-tecnologia/directus-extension-push-notification#readme"
}
