{
	"name": "@devix/directus-extension-push-notification",
	"version": "0.1.2",
	"type": "module",
	"dependencies": {
		"web-push": "^3.6.4"
	},
	"directus:extension": {
		"host": "^10.1.7",
		"type": "bundle",
		"path": {
			"app": "dist/app.js",
			"api": "dist/api.js"
		},
		"entries": [
			{
				"type": "endpoint",
				"name": "push-notification",
				"source": "src/push-notification/index.ts"
			},
			{
				"type": "hook",
				"name": "db-configuration",
				"source": "src/db-configuration/index.ts"
			}
		]
	},
	"description": "A simple and straightforward push notification management extension for directus",
	"icon": "extension",
	"keywords": [
		"directus",
		"directus-extension",
		"directus-custom-bundle",
		"push-notification"
	],
	"scripts": {
		"build": "directus-extension build",
		"postbuild": "cp ./directus-state.json ./dist/directus-state.json",
		"dev": "directus-extension build -w --no-minify",
		"link": "directus-extension link",
		"add-extension": "directus-extension add"
	},
	"devDependencies": {
		"@directus/extensions-sdk": "10.1.7",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^9.0.5",
		"@semantic-release/npm": "^10.0.5",
		"@types/express": "^4.17.17",
		"@types/node": "^20.5.0",
		"@types/pino": "^7.0.5",
		"@types/web-push": "^3.3.2",
		"semantic-release": "^21.1.1",
		"typescript": "^5.1.6"
	},
	"publishConfig": {
		"registry": "https://verdaccio.paas.node07.de.vix.br/"
	}
}
